{% extends 'medewerker.html.twig' %}

{% block menu %}
    <li class="active"><a href="{{ path('activiteitenoverzicht') }}">home</a></li>
    <li class="active"><a href="{{ path('deelnemeroverzicht') }}">deelnemer overzicht</a></li>
    <li><a href="{{ path('beheer') }}"><span class="badge">{{ activiteiten|length }}</span>beheer</a></li>
{% endblock %}
{% block content %}
    <section >
        <table class="table" style="table-layout: fixed">
            <thead>
            <tr>
                <td>naam</td>
                <td>achternaam</td>
                <td>username</td>
                <td>email</td>
            </tr>
            </thead>
            <tbody>
            {% for deelnemer in deelnemers %}
                {% if deelnemer.roles == ['ROLE_USER'] %}
                <tr>
                    <td>
                        {{ deelnemer.naam}}
                    </td>
                    <td>
                        {{ deelnemer.achternaam}}
                    </td>

                    <td>
                        {{ deelnemer.username}}
                    </td>
                    <td>
                        {{ deelnemer.email}}
                    </td>
                    <td>
                        <a href="{{ path('resetPassword', {'id': deelnemer.id}) }}">reset wachtwoord</a>
                    </td>
                </tr>
                {% else %}
                {% endif %}
            {% endfor %}

            </tbody>
        </table>
        <br />
    </section>

{% endblock %}
